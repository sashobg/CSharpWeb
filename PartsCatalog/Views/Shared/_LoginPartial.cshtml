@using Microsoft.AspNetCore.Identity
@using PartsCatalog.Data.Models
@using PartsCatalog.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav">
           
            <li class="nav-item">
                <a asp-area="Shop" asp-controller="Orders" asp-action="List" class="nav-link">Поръчки</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Manage" asp-action="Index" class="nav-link">Профил</a>
            </li>
           
            <li class="nav-item">
                <button type="submit" class="btn btn-link nav-link">Изход</button>
            </li>
        </ul>
    </form>

}
else
{
    <ul class="navbar-nav">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"  class="nav-link">Регистрация</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"  class="nav-link">Вход</a></li>
   </ul>
}
