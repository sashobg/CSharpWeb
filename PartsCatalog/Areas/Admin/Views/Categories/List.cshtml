@model  IEnumerable<CategoryListingServiceModel>

@{
    ViewBag.Title = "Всички категории";
}

<div class="container">
    <div class="well">
        <br/>
        <h2>Всички категории - <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class = "btn btn-warning">Добави</a></h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Категория</th>
                    <th>Опции</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-Id="@category.Id">Редактирай</a>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-Id="@category.Id">Изтрий</a>

           
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>