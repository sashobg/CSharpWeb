@model  IEnumerable<PartsCatalog.Services.Shop.Models.Category.CategoryListingServiceModel>

@{
    ViewBag.Title = "Всички категории";
}

<div class="container">
    <div class="well">
        <h2>Всички категории - @Html.ActionLink("Добави", "Create", "Category", null, new { @class = "btn btn-warning" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Категория</th>
                        <th>Опции</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                @Html.ActionLink("Редактирай", "Edit", "Category", new { @id = category.Id }, null)
                                @Html.ActionLink("Изтрий", "Delete", "Category", new { @id = category.Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>