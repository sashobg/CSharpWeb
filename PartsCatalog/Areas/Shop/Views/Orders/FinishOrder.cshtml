@model OrderFormModel
@{
    ViewData["Title"] = "FinishOrder";
}
<br /> 
<center><h2>Поръчка</h2></center>
<br/>
<center>
<form class="form-horizontal col-md-6 col-md-offset-3" role="form" method="post">
    <div class="form-group">
        <label asp-for="Address" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
   
    <div class="form-group">
        <label asp-for="Comment" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Comment" class="form-control" rows="4" ></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>

        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input id="submit" name="submit" type="submit" value="Send" class="btn btn-primary">
        </div>
    </div>
    
</form>
    </center>